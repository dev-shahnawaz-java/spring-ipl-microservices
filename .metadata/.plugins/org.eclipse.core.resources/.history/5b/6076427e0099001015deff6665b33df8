package com.mp.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.mp.vo.IPLTeamVO;

@FeignClient(
    name = "IPLTEAM-SERVICE",
    url = "${iplteam.service.url:}", // Optional: for direct URL override
    fallback = IPLTeamServiceFallback.class
)
public interface IPLTeamServiceMSClient {

    @GetMapping("/team-api/find/{id}")
    public IPLTeamVO getTeamById(@PathVariable("id") int id);
}
